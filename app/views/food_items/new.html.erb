<div class="page-wrapper">
  <div class="container-fluid">
    <div class="col-md-12">
      <div class="card white-box p-0"><br>
        <div class="col-lg-5 mx-lg-auto">
          <div class="card shadow">
            <div class="card-header">
              <h2 class="card-title text-center">Add Food Item</h2>
            </div>
            <div class="card-body">

              <%= form_for @food_item do |f| %>
                <div class="form-group">
                  <%= f.label :category_id, class: 'mb-2' %>
                  <%= f.collection_select :category_id , Category.order(:menu), :id, :title, {:prompt => 'Choose a category'}, class: "form-control form-control-lg" %>
                </div>
                <div class="form-group">
                  <%= f.label :name, class: 'mb-2' %>
                  <%= f.text_field :name, autofocus: true, class: "form-control form-control-lg" %>
                </div>
                <div class="form-group">
                  <%= f.label :price, class: 'mb-2' %>
                  <%= f.text_field :price, autofocus: true, class: "form-control form-control-lg" %>
                </div>
                <div class="actions">
                  <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
                </div>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>