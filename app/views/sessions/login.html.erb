<div class="content-wrapper">
  <div class="container">
    <h2>Log In</h2><br>
      <%= form_with url: sign_in_path do |form|%>
      <div class="mb-3>
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control" %>
      </div><br>

      <div class="mb-3>
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control" %>
      </div><br>
  
      <div class="mb-3">
        <%= form.submit "Sign in", class: "btn btn-primary" %>
      </div>
  </div>
</div>

<% end %>
