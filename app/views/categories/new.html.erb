<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

  <%= render 'shared/header' %>
  <%= render 'shared/sidebar' %>

  <div class="page-wrapper">
    <div class="container-fluid">
      <div class="col-md-12">
        <div class="card white-box p-0"><br>
          <div class="col-lg-5 mx-lg-auto">
            <div class="card shadow">
              <div class="card-header">
                <h2 class="card-title text-center">Add Category</h2>
              </div>
              <div class="card-body">

                <%= form_for @category do |f| %>
                  <div class="form-group">
                    <%= f.label :menu_id, class: 'mb-2' %>
                    <%= f.collection_select :menu_id, current_employee.resturant.menus.order(:title), :id, :title, {:prompt => 'Choose a menu'}, class: "form-control form-control-lg" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :title, class: 'mb-2' %>
                    <%= f.text_field :title, autofocus: true, class: "form-control form-control-lg" %>
                  </div>
                  <div class="actions">
                    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
                  </div>
                <% end %>

              </div>
            </div>
          </div>
        </div>                  
      </div>
    </div>
  </div>
  <div class="page-wrapper">

    <%= render 'shared/footer' %>
    
  </div>
</div>